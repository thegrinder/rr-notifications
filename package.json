{
  "name": "rr-notifications",
  "version": "1.1.1",
  "description": "Flexible react notification system",
  "keywords": [
    "react",
    "styled-components",
    "notifications"
  ],
  "homepage": "https://thegrinder.github.io/rr-notifications",
  "repository": {
    "type": "git",
    "url": "https://github.com/thegrinder/rr-notifications.git"
  },
  "main": "./dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "production": "webpack",
    "prepublishOnly": "npm run production",
    "test": "jest",
    "docz:build": "docz build",
    "docz:dev": "docz dev",
    "lint": "eslint './src/**/*.js' --fix",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "author": "Pawel Szczepkowski",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@semantic-release/commit-analyzer": "^6.2.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/npm": "^5.1.13",
    "@semantic-release/release-notes-generator": "^7.2.1",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.7",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.0",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "semantic-release": "^15.13.19",
    "styled-components": "^4.3.2",
    "webpack": "4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "styled-components": "^4.3.2"
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  }
}
